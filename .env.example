# LinkRelief - Environment Variables Template
# Copy this to .env (backend) or frontend/.env.local (frontend) and fill in the values

# Direct Database Connection (Prisma)
DATABASE_URL="postgresql://user:password@host:port/dbname?pgbouncer=true&connection_limit=20"

# Supabase Public Keys (Used by both Frontend & Backend)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Backend Discovery
NEXT_PUBLIC_BACKEND_URL="http://localhost:3001"

# ScaleDown Image Service API Key
SCALEDOWN_API_KEY="your-scaledown-key-here"

# Admin Access Identifier (Email)
NEXT_PUBLIC_ADMIN_IDENTIFIER="admin@example.com"

# MapTiler / Map API Key
NEXT_PUBLIC_MAP_API_KEY="your-map-api-key-here"
